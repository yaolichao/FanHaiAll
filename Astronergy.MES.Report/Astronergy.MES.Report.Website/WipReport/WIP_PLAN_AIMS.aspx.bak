                <EditItemTemplate>
                    <asp:Label ID="Label1" runat="server" Text='<%# Bind("WORK_ORDER_NO") %>'></asp:Label>
                </EditItemTemplate>
                <ItemTemplate>
                 <asp:TextBox ID="txtWoInput" runat="server" class="required" Text='<%# Bind("WORK_ORDER_NO") %>'></asp:TextBox>                   
                </ItemTemplate>
